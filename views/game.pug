html
  head
    link(rel="stylesheet",type="text/css",href="game.css")
  body
    .container
      .grid.grid_inline
        .col.col_one-third.body1
          form#chat_form(action='api/documents',method="GET")
            input#username(type="hidden",value=user)
            fieldset.fieldset
              .field-group
                label.label(for="message") Message
                textarea.field#message(type="text",name="message")
            .actions
              button.btn.btn_danger Send
          .chat.body1
        .col.col_two-thirds
          .game-board
            .tank#tank1
              include graphics/tank.svg
    script(src="/jQuery/dist/jquery.min.js")
    script(src="/game.js")

